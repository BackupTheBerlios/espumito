	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="url">
			<value>jdbc:mysql://localhost:3306/espumito-develop</value>
		</property>
		<property name="username">
			<value>espumito</value>
		</property>
		<property name="password">
			<value>popotito</value>
		</property>
	</bean>
	
	<bean id="securitySvc"
		class="ar.com.espumito.security.services.SecuritySvcImpl">
		<property name="userVOAssembler">
			<ref bean="userVOAssembler" />
		</property>
		<property name="roleVOAssembler">
			<ref bean="roleVOAssembler" />
		</property>
		<property name="roleGroupVOAssembler">
			<ref bean="roleGroupVOAssembler" />
		</property>
		<property name="userHome">
			<ref bean="userHome" />
		</property>
		<property name="roleHome">
			<ref bean="roleHome" />
		</property>
		<property name="roleGroupHome">
			<ref bean="roleGroupHome" />
		</property>
	</bean>

	<bean id="userHome"
		class="ar.com.espumito.security.domain.UserHomeImpl">
		<property name="dao">
			<ref bean="userDao" />
		</property>
	</bean>

	<bean id="userDao"
		class="ar.com.espumito.security.persistence.UserDAOImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="userVOAssembler"
		class="ar.com.espumito.security.services.UserVOAssembler">
		<property name="roleVOAssembler">
			<ref bean="roleVOAssembler" />
		</property>
	</bean>

	<bean id="roleHome"
		class="ar.com.espumito.security.domain.RoleHomeImpl">
		<property name="dao">
			<ref bean="roleDao" />
		</property>
	</bean>

	<bean id="roleDao"
		class="ar.com.espumito.security.persistence.RoleDAOImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="roleVOAssembler"
		class="ar.com.espumito.security.services.RoleVOAssembler" />
		
	<bean id="roleGroupHome"
		class="ar.com.espumito.security.domain.RoleGroupHomeImpl">
		<property name="roleGroupDao">
			<ref bean="roleGroupDao" />
		</property>
	</bean>
	
	<bean id="roleGroupDao"
		class="ar.org.blah.j2ee.persistence.HibernateDAOImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property>
		<property name="managedClassName">
			<value>ar.com.espumito.security.domain.RoleGroupBean</value>
		</property>
	</bean>

	<bean id="roleGroupVOAssembler"
		class="ar.com.espumito.security.services.RoleGroupVOAssembler">
		<property name="roleVOAssembler">
			<ref bean="roleVOAssembler"/>
		</property>
	</bean>
	
</beans>
