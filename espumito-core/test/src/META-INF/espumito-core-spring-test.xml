<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd" >
<beans>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="mappingResources">
			<list>
				<value>ar/com/espumito/security/domain/UserBean.hbm.xml</value>
				<value>ar/com/espumito/security/domain/RoleBean.hbm.xml</value>
				<value>ar/com/espumito/security/domain/RoleGroupBean.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					net.sf.hibernate.dialect.MySQLDialect
				</prop>
			</props>
		</property>
	</bean>

	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="url">
			<value>jdbc:mysql://localhost:3306/espumito</value>
		</property>
		<property name="username">
			<value>espumito</value>
		</property>
		<property name="password">
			<value>popotito</value>
		</property>
	</bean>

	<bean id="securitySvc"
		class="ar.com.espumito.security.services.SecuritySvcImpl">
		<property name="userVOAssembler">
			<ref bean="userVOAssembler" />
		</property>
		<property name="roleVOAssembler">
			<ref bean="roleVOAssembler" />
		</property>
		<property name="userHome">
			<ref bean="userHome" />
		</property>
		<property name="roleHome">
			<ref bean="roleHome" />
		</property>
	</bean>

	<bean id="userHome"
		class="ar.com.espumito.security.domain.UserHomeImpl">
		<property name="dao">
			<ref bean="userDao" />
		</property>
	</bean>

	<bean id="userDao"
		class="ar.com.espumito.security.persistence.UserDAOImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="userVOAssembler"
		class="ar.com.espumito.security.services.UserVOAssembler">
		<property name="roleVOAssembler">
			<ref bean="roleVOAssembler" />
		</property>
	</bean>

	<bean id="roleHome"
		class="ar.com.espumito.security.domain.RoleHomeImpl">
		<property name="dao">
			<ref bean="roleDao" />
		</property>
	</bean>

	<bean id="roleDao"
		class="ar.com.espumito.security.persistence.RoleDAOImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="roleVOAssembler"
		class="ar.com.espumito.security.services.RoleVOAssembler" />
</beans>
